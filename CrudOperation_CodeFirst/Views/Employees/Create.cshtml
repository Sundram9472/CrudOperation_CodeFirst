@model CrudOperation_CodeFirst.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select list asp-for="DepartmentId" class ="form-control" asp-items="@ViewBag.Department_Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeGmail" class="control-label"></label>
                <input asp-for="EmployeeGmail" class="form-control"  autocomplete="off"/>
                <span asp-validation-for="EmployeeGmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeContact" class="control-label"></label>
                <input asp-for="EmployeeContact" class="form-control"  autocomplete="off"/>
                <span asp-validation-for="EmployeeContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAdress" class="control-label"></label>
                <input asp-for="EmployeeAdress" class="form-control"  autocomplete="off"/>
                <span asp-validation-for="EmployeeAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
