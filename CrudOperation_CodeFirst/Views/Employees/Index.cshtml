@model IEnumerable<CrudOperation_CodeFirst.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeGmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeGmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeAdress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-secondary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
